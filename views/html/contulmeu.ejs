	<link rel="stylesheet" href="/CSS/stil_comun.css">
	<link rel="stylesheet" href="/CSS/stil_cont.css">
	<link rel="stylesheet" href="/CSS/stil_buton_top.css">
    <script type="text/javascript" src="JAVASCRIPT/varstautilizator.js"></script>
	<script type="text/javascript" src="JAVASCRIPT/marcarepgactiva.js"></script>
	<script type="text/javascript" src="JAVASCRIPT/scroll_top.js"></script>
